<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="455" d:DesignHeight="20"
             x:Class="DeltaEditorAvalonia.Vector3NodeControl">
  <Grid Height="20">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="3*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="20"/>
    </Grid.RowDefinitions>
    <Label Grid.Column="0"
           VerticalContentAlignment="Center"
           Padding="25,0,0,0"
           FontSize="12">
      fieldName
    </Label>
    <Grid Grid.Column="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>

      <!--X-->
      <Grid Grid.Column="0">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0"
               FontSize="12"
               HorizontalAlignment="Right"
               VerticalContentAlignment="Center">
          X
        </Label>
        <TextBox Grid.Column="1"
                 FontSize="12"
                 CornerRadius="0,3,3,0"
                 BorderThickness="0,0,1,0"
                 Padding="5,0,0,0"
                 MinHeight="0"
                 Height="20"
                 VerticalContentAlignment="Center">
          1,33
        </TextBox>
      </Grid>

      <!--Y-->
      <Grid Grid.Column="1">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0"
               FontSize="12"
               HorizontalAlignment="Right"
               VerticalContentAlignment="Center">
          Y
        </Label>
        <TextBox Grid.Column="1"
                 FontSize="12"
                 CornerRadius="0,3,3,0"
                 BorderThickness="0,0,1,0"
                 Padding="5,0,0,0"
                 MinHeight="0"
                 Height="20"
                 VerticalContentAlignment="Center">
          3,14
        </TextBox>
      </Grid>

      <!--Z-->
      <Grid Grid.Column="2">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0"
               FontSize="12"
               HorizontalAlignment="Right"
               VerticalContentAlignment="Center">
          Z
        </Label>
        <TextBox Grid.Column="1"
                 FontSize="12"
                 CornerRadius="0,3,3,0"
                 BorderThickness="0,0,1,0"
                 Padding="5,0,0,0"
                 MinHeight="0"
                 Height="20"
                 VerticalContentAlignment="Center">
          1
        </TextBox>
      </Grid>

    </Grid>
  </Grid>
</UserControl>
