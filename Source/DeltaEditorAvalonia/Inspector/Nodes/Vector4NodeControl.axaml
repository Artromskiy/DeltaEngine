<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:uc="clr-namespace:DeltaEditorAvalonia;assembly=DeltaEditorAvalonia"
             mc:Ignorable="d" d:DesignWidth="455" d:DesignHeight="20"
             x:Class="DeltaEditorAvalonia.Vector4NodeControl">
  
  <Grid Height="20"
        ColumnDefinitions="*,3*">
    
    <Label Grid.Column="0"
           x:Name="FieldName"
           x:FieldModifier="private"
           VerticalContentAlignment="Center"
           Padding="25,0,0,0"
           FontSize="12"
           Content="fieldName"/>
    
    <Grid Grid.Column="1"
          ColumnDefinitions="*,*,*,*">

      <!--X-->
      <uc:NamedTextField FieldName="X"
                         Data="6,28"
                         Grid.Column="0"
                         x:Name="FieldX"
                         x:FieldModifier="private"
                         Cursor="SizeWestEast"/>

      <!--Y-->
      <uc:NamedTextField FieldName="Y"
                         Data="1"
                         Grid.Column="1"
                         x:Name="FieldY"
                         x:FieldModifier="private"
                         Cursor="SizeWestEast"/>

      <!--Z-->
      <uc:NamedTextField FieldName="Z"
                         Data="1"
                         Grid.Column="2"
                         x:Name="FieldZ"
                         x:FieldModifier="private"
                         Cursor="SizeWestEast"/>
      
      <!--W-->
      <uc:NamedTextField FieldName="W"
                         Data="1"
                         Grid.Column="3"
                         x:Name="FieldW"
                         x:FieldModifier="private"
                         Cursor="SizeWestEast"/>

    </Grid>
  </Grid>
</UserControl>
