<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

      <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
          <SolidColorBrush x:Key="DefaultBorderBrush" Opacity="0.12" Color="White"/>
          <SolidColorBrush x:Key="DefaultBorderFocusBrush" Color="#AF32F0"/>
          <SolidColorBrush x:Key="DefaultBorderOverBrush" Color="#C160F6"/>
          <SolidColorBrush x:Key="TextBoxFocusBorderBrush" Color="#AF32F0"/>
          <SolidColorBrush x:Key="TextBoxBorderedPointeroverBorderBrush" Color="#C160F6"/>
          
        </ResourceDictionary>
        <ResourceDictionary x:Key="Dark">
          <SolidColorBrush x:Key="DefaultBorderBrush" Opacity="0.12" Color="White"/>
          <SolidColorBrush x:Key="DefaultBorderFocusBrush" Color="#AF32F0"/>
          <SolidColorBrush x:Key="DefaultBorderOverBrush" Color="#C160F6"/>
          <SolidColorBrush x:Key="TextBoxFocusBorderBrush" Color="#AF32F0"/>
          <SolidColorBrush x:Key="TextBoxBorderedPointeroverBorderBrush" Color="#C160F6"/>
        </ResourceDictionary>
      </ResourceDictionary.ThemeDictionaries>

</ResourceDictionary>
