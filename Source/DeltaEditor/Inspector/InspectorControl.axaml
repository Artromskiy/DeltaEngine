<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:uc="clr-namespace:DeltaEditor;assembly=DeltaEditor"
             mc:Ignorable="d" d:DesignWidth="455" d:DesignHeight="612"
             x:Class="DeltaEditor.InspectorControl">

  <Grid Background="Magenta"
        RowDefinitions="20,20,*,Auto">

    <!--Menu Name-->
    <Grid Grid.Row="0"
          ColumnDefinitions="20,*,Auto">

      <Svg Grid.Column="0"
           Margin="3"
           Path="/Assets/Icons/inspector.svg"/>

      <Label Grid.Column="1"
             FontWeight="Bold"
             FontSize="12"
             Content="Inspector"/>

      <Label x:Name="DebugTimer"
             x:FieldModifier="private"
             Grid.Column="2"
             Padding="0,0,5,0"
             FontWeight="Bold"
             FontSize="12"
             VerticalContentAlignment="Center"
             Content="3350Î¼s"/>
    </Grid>

    <Grid Grid.Row="1"
          ColumnDefinitions="Auto,Auto,*">
      <Border Grid.Column="0"
              Width="20">

      </Border>
      <!--Entity Icon-->
      <Border Grid.Column="1"
            Width="20"
            Height="20"
            BorderThickness="0,0,0,0"
            BorderBrush="Black"
            Padding="3">
        <Svg Path="/Assets/Icons/entity.svg"/>
      </Border>

      <!--Name field-->
      <TextBox Grid.Column="2"
               MinHeight="0"
               Height="20"
               CornerRadius="0,0,0,0"
               BorderBrush="Black"
               FontSize="12"
               Padding="5,0,0,0"
               BorderThickness="0,0,0,0"
               VerticalContentAlignment="Center"
               Watermark="Name"/>
    </Grid>

    <!--Entities-->
    <Border Grid.Row="2"
            Background="Cyan">
      <ScrollViewer VerticalScrollBarVisibility="Visible">
        <StackPanel x:Name="InspectorStack"
                    x:FieldModifier="private">

          <!--Test Transform-->

          <!--
          <uc:ComponentNodeControl Collapsed="False"
                                   RowsDefs="*,*,*">
            <uc:ComponentNodeControl.Rows>
              <uc:Vector3NodeControl Grid.Row="0"/>
              <uc:QuaternionNodeControl Grid.Row="1"/>
              <uc:Vector3NodeControl Grid.Row="2"/>
            </uc:ComponentNodeControl.Rows>
          </uc:ComponentNodeControl>
          -->

        </StackPanel>
      </ScrollViewer>
    </Border>

    
    <Button Grid.Row="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Add Component"
            FontSize="12"
            FontWeight="Bold"
            x:Name="AddComponentButton"
            x:FieldModifier="private">
      <Button.Flyout>
        <Flyout>
          <uc:AddComponentControl x:Name="AddComponentControlFlyout"
                                  x:FieldModifier="private"/>
        </Flyout>
      </Button.Flyout>
    </Button>
    
  </Grid>
</UserControl>
