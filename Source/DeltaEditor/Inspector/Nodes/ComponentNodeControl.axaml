<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:uc="clr-namespace:DeltaEditor;assembly=DeltaEditor"
             mc:Ignorable="d" d:DesignWidth="455" d:DesignHeight="20"
             x:Class="DeltaEditor.ComponentNodeControl">

  <Grid x:Name="MainGrid"
        x:FieldModifier="private"
        Background="Magenta"
        RowDefinitions="20, Auto">
    
    <Grid Grid.Row="0"
          ColumnDefinitions="20,20,*,Auto,20,20">

      <!--Collapse/Expand-->
      <Button Grid.Column="0"
              Click="OnCollapseClick"
              CornerRadius="0,0,3,0"
              BorderThickness="0"
              Padding = "0"
              Width="20"
              Height="20">
        <Svg x:Name="CollapseIcon"
             x:FieldModifier="private"
             Path="/Assets/Icons/expanded.svg"
             Margin="3"/>
      </Button>
      
      <!--Component Icon-->
      <Svg Grid.Column="1"
           Margin="3"
           Path="/Assets/Icons/file.svg"/>
      
      <!--Component Name-->
      <Label x:Name="ComponentName"
             x:FieldModifier="private"
             Grid.Column="2"
             Padding="0"
             FontWeight="Bold"
             FontSize="12"
             VerticalContentAlignment="Center"
             Content="Component"/>
      
      <!--Debug Timer-->
      <uc:DebugTimerControl x:Name="DebugTimer"
                            x:FieldModifier="private"
                            Grid.Column="3"/>

      <!--Remove Component-->
      <Button Grid.Column="4"
              Click="OnRemoveClick"
              CornerRadius="0,0,0,3"
              BorderThickness="0"
              Padding = "0"
              Width="20"
              Height="20">
        <Svg Path="/Assets/Icons/delete.svg"
             Margin="3"/>
      </Button>

      <!--Component Settings-->
      <Button Grid.Column="5"
              x:Name="SettingsButton"
              x:FieldModifier="private"
              CornerRadius="0,0,0,0"
              BorderThickness="0"
              Padding = "0"
              Width="20"
              Height="20">
        <Svg Path="/Assets/Icons/tune.svg"
             Margin="3"/>
      </Button>
      
    </Grid>
    
    <Grid Grid.Row="1"
            x:Name="ChildrenGrid"
            x:FieldModifier="private">
    </Grid>
    
  </Grid>
</UserControl>
